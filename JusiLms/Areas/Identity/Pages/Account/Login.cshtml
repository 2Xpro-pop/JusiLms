@page
@model LoginModel

@{
    ViewData["Title"] = "Авторизация";
}


<div class="row justify-content-center w-100 h-100">
    <div class="col-11 col-md-10 h-100 bg-white shadow p-5 radius-30">
        <form id="account" method="post">
            <h2 class="secondary-text-color avante text-center">@ViewData["Title"]</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Login" class="form-control shifu-input secondary-text-color mb-2" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Login" class="form-label avante">Логин</label>
                <span asp-validation-for="Input.Login" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control shifu-input secondary-text-color mb-2" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label avante">Пароль</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label avante">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 py-4 my-3 mud-button-root mud-button mud-button-text mud-button-text-default mud-button-text-size-medium mud-ripple shifu-button">
                    <span class="mud-button-label">ВОЙТИ!</span>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
